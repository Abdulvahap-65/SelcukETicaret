@model List<SelcukETicaret.Models.i.BuyModels>
@{
    /**/

    ViewBag.Title = "Siparişleriniz";
}

<h2>Sipariş Sayfası</h2>

<h3>@ViewBag.MyError</h3>
<table class="table table-condensed table-striped table-hover text-center">

    <thead>
        <tr>
            <!--th*4>{kolon adı}-->
            <th class="text-center">Sipariş</th>
            <th class="text-center">Fiyat</th>
            <th class="text-center"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (SelcukETicaret.Models.i.BuyModels item in Model)
        {
            <tr>
                <td>@item.OrderName</td>
                <td>@item.TotelPrice ₺</td>
                <td>
                    <button type="button" class="btn btn-info">Ödeme Bildirimi</button>
                </td>
            </tr>

        }
    </tbody>
</table>